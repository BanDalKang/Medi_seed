<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/suggestion_view_background"
    android:layout_marginTop="1dp">

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/searchmarker"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pharmacy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="수거함 이름"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintStart_toEndOf="@id/location_icon"
        app:layout_constraintTop_toTopOf="@id/location_icon"
        app:layout_constraintBottom_toBottomOf="@id/location_icon"
        />

    <TextView
        android:id="@+id/pharmacy_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="수거함 위치"
        android:textSize="12dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="17dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@id/location_icon"
        app:layout_constraintTop_toTopOf="@id/location_icon"
        app:layout_constraintBottom_toBottomOf="@id/location_icon"
        />

    <TextView
        android:id="@+id/pharmacy_classification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:textSize="12dp"
        tools:text="약국"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/pharmacy_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="9dp"
        android:textSize="12dp"
        tools:text="500"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/pharmacy_classification"
        app:layout_constraintStart_toStartOf="@+id/pharmacy_classification"
        app:layout_constraintTop_toBottomOf="@+id/pharmacy_classification" />

    <TextView
        android:id="@+id/pharmacy_distance_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/pharmacy_distance"
        app:layout_constraintStart_toEndOf="@+id/pharmacy_distance"
        app:layout_constraintTop_toTopOf="@+id/pharmacy_distance" />

</androidx.constraintlayout.widget.ConstraintLayout>