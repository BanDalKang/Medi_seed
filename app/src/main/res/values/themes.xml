<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MediSeed" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_200</item>

        <!-- No Action Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/white</item>
        <item name="tabTextColor">@color/grey</item>
        <item name="tabIconTint">@color/grey</item>
    </style>

    <style name="RoundedBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundBottomSheetStyle</item>
    </style>
    <style name="RoundBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_bottom_sheet</item>
    </style>

    <!-- Font. -->
    <style name="TextAppearance.AppCompat.Headline.H1" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">24sp</item>
    </style>

